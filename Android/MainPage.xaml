<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BpMonMaui.MainPage"
             Title="BpMon">

    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Blood Pressure Monitor" FontSize="24" HorizontalOptions="Center" />

        <Button x:Name="StartButton" Text="Start" Clicked="StartButton_Clicked" HeightRequest="80 "/>

        <Label Text="Readings:" FontSize="18" />
        <Editor x:Name="ReadingsEditor" IsReadOnly="True" HeightRequest="250" />

        <Label Text="Battery:" FontSize="18" />
        <Label x:Name="BatteryLabel" FontSize="16" />
    </VerticalStackLayout>
</ContentPage>
